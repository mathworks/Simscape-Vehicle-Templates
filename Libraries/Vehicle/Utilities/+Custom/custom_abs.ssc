component custom_abs
% PS Abs No ZC :0.75
% This block produces the absolute value of a signal without generating a zero crossing:
%
% y = abs(u)
%

% Copyright 2005-2024 The MathWorks, Inc.

  inputs
    I = { 0, '1' }; % :left
  end

  outputs
    O = { 0, '1' }; % :right
  end

  equations
    O == neabs(I);
  end

end
